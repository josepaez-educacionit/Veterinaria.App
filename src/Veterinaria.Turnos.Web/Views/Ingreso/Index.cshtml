<div class="container my-4">
	@if (ViewBag.ErrorMessage != null)
	{
		<div class="alert alert-danger justify-content-center" role="alert">
			@ViewBag.ErrorMessage
		</div>
	}

	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card shadow-sm p-4">
				<h2 class="text-center text-primary mb-4">Reservar un turno</h2>
				
				<form asp-action="Index" method="post">
					<div class="form-group mb-3">
						<label for="numeroDocumento">Número de Documento</label>
						<input type="text" class="form-control" id="numeroDocumento" name="numeroDocumento" placeholder="Ingrese su número de documento" pattern="^[0-9]+$" title="Ingrese solo dígitos.">
					</div>
					<div class="form-group mb-4">
						<label for="email">Email</label>
						<input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su email">
					</div>
					<button type="submit" class="btn btn-primary btn-block">Ingresar</button>
				</form>

			</div>
			<div class="text-center mt-4">
				<p>¿Sos nuevo en esta App?</p>
				@Html.ActionLink("Registrarme", "Registrar", "Clientes", null, new { @class = "btn btn-outline-primary" })
				<p class="mt-3">Al ingresar acepto los <a href="#" class="text-primary">términos y condiciones</a>.</p>
			</div>
		</div>
	</div>
</div>